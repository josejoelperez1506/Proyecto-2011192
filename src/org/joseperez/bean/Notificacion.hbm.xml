<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.joseperez.bean.Notificacion" table="NOTIFICACION">
	
	    <id name="idNotificacion" type="java.lang.Integer">
            <column name="IDNOTIFICACION" />
            <generator class="sequence-identity" >
            	<param name="sequence">NOTIFICACION_SEQ</param>
            </generator>
        </id>
        
        <property name="mensaje" type="java.lang.String">
            <column name="MENSAJE" />
        </property>
        <property name="fecha" type="java.lang.String">
            <column name="FECHA" />
        </property>

	</class>
</hibernate-mapping>